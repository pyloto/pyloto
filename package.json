{
  "name": "pyloto-corp",
  "version": "1.0.0",
  "description": "Pyloto Corp - Plataforma de intermediação de entregas com IA",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:website\" \"npm run dev:admin\"",
    "dev:backend": "cd apps/delivery-system && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:website": "cd apps/website && npm run dev",
    "dev:admin": "cd apps/admin-panel && npm run dev",
    "build": "npm run build:website && npm run build:admin",
    "build:website": "cd apps/website && npm run build",
    "build:admin": "cd apps/admin-panel && npm run build",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "setup": "npm install && npm run setup:backend && npm run setup:frontend",
    "setup:backend": "cd apps/delivery-system && pip install -r requirements.txt",
    "setup:frontend": "npm install --workspaces",
    "docker:dev": "docker-compose -f docker/docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker/docker-compose.prod.yml up"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pyloto/pyloto.git"
  },
  "keywords": [
    "delivery",
    "logistics",
    "ai",
    "whatsapp",
    "fastapi",
    "nextjs",
    "startup"
  ],
  "author": "Pyloto Corp",
  "license": "PROPRIETARY"
}